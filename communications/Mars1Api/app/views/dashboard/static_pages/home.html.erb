<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= image_tag("Group 2.png", class: "img-responsive", style: "padding-top:25px") %>
  </div>
</br>
  <div class="col-md-12" style="padding-top:50px">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <p class="text-center panel-title">Current Status on Mars</p>
      </div>
      <div class="panel-body">
        <p><i>collected data from the Curiosity Rover on Mars<i><p>
      </div>
      <table class="table">
        <tr>
          <th>Sol</th>
          <th>Pressure</th>
          <th>Temp High</th>
          <th>Temp Low</th>
          <th>Season</th>
        </tr>
        <tr>
          <td><%= @mars_report.sol %></td>
          <td><%= @mars_report.pressure %></td>
          <td><%= @mars_report.max_temp_fahrenheit %></td>
          <td><%= @mars_report.min_temp_fahrenheit%></td>
          <td><%= @mars_report.season%></td>
        </tr>

      </table>
    </div>

  </div>


